{
  "swagger": "2.0",
  "info": {
    "title": "Book List'",
    "version": "1.0"
  },
  "servers": [
    {"url": "http://localhost:8000/"}
  ],
  "parameters": {
    "id": {"name": "id", "in": "path","required": "true", "schema": {"type": "integer", "format": "int64", "minimum":1}}
  },
  "paths": {
    "/books": {
      "get": {
        "summary": "Returns a list of users.",
        "responses": {
          "200": {
            "description": "A JSON array of books"
          }
        }
      }
    },
    "/books/{id}": {
      "get": {
        "summary": "Returns a book by id",
        "description": "Adds a book from the list of books",
        "parameters": [
          {"$ref": "#/parameters/id"}
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "delete": {
        "summary": "Removes a book by id",
        "description": "removes a book from the list of books",
        "parameters": [
          {"$ref": "#/parameters/id"}
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  }
}